# AgriDirect Microservices Environment Configuration

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=7d

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/agridirect

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Email Configuration (for OTP and notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Service Ports
AUTH_PORT=5001
USER_PORT=5002
PRODUCT_PORT=5003
ORDER_PORT=5004
COMMUNICATION_PORT=5005
FEEDBACK_PORT=5006
GATEWAY_PORT=8000

# Service URLs (for inter-service communication)
AUTH_SERVICE=http://localhost:5001
USER_SERVICE=http://localhost:5002
PRODUCT_SERVICE=http://localhost:5003
ORDER_SERVICE=http://localhost:5004
COMM_SERVICE=http://localhost:5005
FEEDBACK_SERVICE=http://localhost:5006

# Environment
NODE_ENV=development

# Payment Service
PAYMENT_SERVICE_PORT=5007
PAYMENT_SERVICE=http://localhost:5007

# Razorpay Configuration
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret
